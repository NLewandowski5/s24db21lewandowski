extends layout

block content
  h1= title

  -
    let items = results

  .container-fluid
    .row
     each animal, index in results
      .col-sm-2(onclick=`buy(${index})`)
        h3 #{animal.species}
        p Habitat: #{animal.habitat}
        p Population: #{animal.population}
  
  script.
    function buy(index) {
      alert(`You purchased item ${index}`);
    }

